package org.citruscircuits.vision.effects;

import org.opencv.core.Mat;
import org.opencv.core.Scalar;

public abstract class IteratePixelEffect extends ImageEffect {
	@Override
	public Mat process(Mat original) {
		Mat altered = original.clone();
		for (int row = 0; row < original.rows(); row++ ) {
	        for(int col = 0; col < original.cols(); col++ ) {
	            altered.put(row, col, processPixel(new Scalar(original.get(row, col)), row, col).val);
	        }
	    }
		return null;
	}
	
	public abstract Scalar processPixel(Scalar in, int row, int col); // Called once for every pixel
}
